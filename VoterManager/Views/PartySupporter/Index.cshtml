@model IEnumerable<Domain.Entities.PartySupporter>

@{
    ViewBag.Title = "Список сторонников партии";
}

<h2>Список сторонников партии</h2>

<p>
    @Html.ActionLink("Создать сторонника партии", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.PersonId)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Открыть", "Show", new { id = item.Id })
        </td>
        <td>
            @if (item.PersonId.HasValue)
            {
                Html.RenderAction("ShowFullName", "Person", new { Id = item.PersonId });
            }
        </td>
    </tr>
}

</table>
