@model IEnumerable<VoterManager.Models.LocalityViewModel>

@{
    ViewBag.Title = "Список нас. пунктов";
}

<h2>Список нас. пунктов</h2>

<p>
    @Html.ActionLink("Создать новый", "Create")
</p>
<table class="entityList">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Locality.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.District.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Открыть", "Show", new { id = item.Locality.Id }) |
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Locality.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Locality.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locality.Name)
            </td>
            <td>
                @if (item.District != null)
                {
                    @Html.ActionLink(item.District.Name, "Show", "District", new { Id = item.District.Id }, new { title = "Открыть район" });
                }
                else
                {
                    <text>не указано</text>
                }
            </td>
        </tr>
    }
</table>
