@model Domain.Entities.PersonRelationshipPersonRelation

@{
    ViewBag.Title = "Добавление связанного физ. лица";
}

<h2>Добавление связанного физ. лица</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Информация о взаимотношении</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PersonId, htmlAttributes: new { @class = "control-label col-md-2" })
            @if(Model.PersonId.HasValue)
            {
                Html.RenderAction("ShowPartial", "Person", new { Id = Model.PersonId.Value });
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RelatedPersonId, htmlAttributes: new { @class = "control-label col-md-2" })
            @if (Model.RelatedPersonId.HasValue)
            {
                Html.RenderAction("ShowPartial", "Person", new { Id = Model.RelatedPersonId.Value });
            }
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RelationshipId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RelationshipId, ViewBag.Relationships as IEnumerable<SelectListItem>, new { @class = "chzn-select", data_placeholder = "Выбрать" })
                @Html.ValidationMessageFor(model => model.RelationshipId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Отмена", "Show", new { Id = Model.PersonId })
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".chzn-select").chosen({ no_results_text: "Не найдено", width: "170px", allow_single_deselect: true });
    });
</script>