@model IEnumerable<VoterManager.Models.MunicipalityHouseRelationViewModel>

@{
    ViewBag.Title = "Связи объектов";
}

<h2>Связи объектов</h2>

<p>
    @Html.ActionLink("Добавить новую связь", "Create")
</p>
<table class="entityList">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.House.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Municipality.Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.MunicipalityHouseRelation.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.MunicipalityHouseRelation.Id })
            </td>
            <td>
                @if (item.House != null)
                {
                    @Html.ActionLink(item.House.Name, "Show", "House", new { Id = item.House.Id }, new { title = "Открыть дом" });
                }
                else
                {
                    <text>не указано</text>
                }
            </td>
            <td>
                @if (item.Municipality != null)
                {
                    @Html.ActionLink(item.Municipality.Name, "Show", "Municipality", new { Id = item.Municipality.Id }, new { title = "Открыть МТУ" });
                }
                else
                {
                    <text>не указано</text>
                }
            </td>

        </tr>
    }

</table>
